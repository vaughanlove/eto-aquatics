generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lesson {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  
  availableSpots Int
  instructor String?
  classMinutes Int
  totalHours Int
  lessonCost Float
  
  award Certification @relation(fields: [certificationId], references: [id])
  certificationId String
  times Timeslot[]
}

model Timeslot {
  id String @id @default(uuid())
  for Lesson @relation(fields: [lessonId], references: [id])
  start DateTime
  end DateTime
  lessonId String
}

model Certification {
  id String @id @default(uuid())
  name String
  description String
  prereqFor Certification[] @relation("prerequisite")
  prereqIn Certification[] @relation("prerequisite")
  availableIn Lesson[]
}

model User {
  id String @id @default(uuid())
  username     String   @unique
  passwordHash String
  isAdmin Boolean @default(false)
}


